@model ProjetoApi.Models.Usuario

@{
    ViewData["Title"] = "Detalhes do Usuario";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<div class="details-container">
    <h4 class="text-center">Usuário</h4>
    <hr class="form-divider" />
    <dl class="row detail-list">
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.UsuarioNome)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.UsuarioNome)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.UsuarioEmail)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.UsuarioEmail)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.UsuarioTelefone)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.UsuarioTelefone)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.UsuarioSenha)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.UsuarioSenha)
        </dd>
    </dl>
    <div class="action-links text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
    </div>
</div>





<style>
    .page-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 2em;
        color: #007bff;
    }

    .text-center {
        text-align: center;
    }
    .details-container {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        width: 60%;
    }

    .form-title {
        text-align: center;
        font-size: 1.5em;
        margin-bottom: 10px;
        color: #555;
    }

    .form-divider {
        margin-bottom: 20px;
    }

    .row {
        margin-bottom: 20px;
    }

    .col-sm-2 {
        font-weight: bold;
    }

    .btn-primary {
        width: 100%;
        background-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
        .btn-secondary {
        width: 100%;
        margin-top: 10px;
    }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }


    .btn-link {
        color: #007bff;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }
</style>
