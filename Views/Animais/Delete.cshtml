@model ProjetoApi.Models.Animais

@{
    ViewData["Title"] = "Delete";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<h3 class="confirm-message">Are you sure you want to delete this?</h3>
<div class="confirmation-container">
    <h4 class="form-title">Animais</h4>
    <hr class="form-divider" />
    <dl class="row detail-list">
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalNome)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalNome)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalRaca)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalRaca)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalTipo)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalTipo)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalCor)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalCor)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalSexo)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalSexo)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalObservacao)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalObservacao)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalFoto)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalFoto)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalDtDesaparecimento)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalDtDesaparecimento)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalDtEncontro)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalDtEncontro)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalStatus)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalStatus)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.Usuario.Id)
        </dd>
    </dl>

    <div class="text-center">
        <form asp-action="Delete" class="delete-form">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-delete">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-back">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .page-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 2em;
        color: #333;
    }

    .confirm-message {
        text-align: center;
        font-size: 1.25em;
        margin-bottom: 20px;
        color: #d9534f;
    }

    .confirmation-container {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        width: 60%;
    }

    .form-title {
        text-align: center;
        font-size: 1.5em;
        margin-bottom: 10px;
        color: #555;
    }

    .form-divider {
        margin-bottom: 20px;
    }

    .detail-list dt, .detail-list dd {
        margin-bottom: 10px;
    }

    .detail-label {
        font-weight: bold;
        color: #555;
    }

    .detail-value {
        color: #333;
    }

    .text-center {
        text-align: center;
        margin-top: 20px;
    }

    .delete-form .btn {
        margin-top: 10px;
        width: 100%;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-delete {
        margin-right: 10px;
    }

    .btn-back {
        margin-left: 10px;
    }
</style>
