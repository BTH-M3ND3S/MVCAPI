@model IEnumerable<ProjetoApi.Models.Animais>

@{
    ViewData["Title"] = "Lista de Animais";
}

<h1 class="page-title">Lista de Animais</h1>

<p class="create-link">
    <a asp-action="Create" class="btn btn-primary">Criar Novo Animal</a>
</p>

<table class="table table-striped">
    <thead class="table-header">
        <tr>
            <th>@Html.DisplayNameFor(model => model.AnimalNome)</th>
            <th>@Html.DisplayNameFor(model => model.AnimalRaca)</th>
            <th>@Html.DisplayNameFor(model => model.AnimalTipo)</th>
            <th>@Html.DisplayNameFor(model => model.AnimalCor)</th>
            <th>@Html.DisplayNameFor(model => model.AnimalSexo)</th>
            <th>@Html.DisplayNameFor(model => model.AnimalObservacao)</th>
            <th>@Html.DisplayNameFor(model => model.AnimalFoto)</th>
            <th>@Html.DisplayNameFor(model => model.AnimalDtDesaparecimento)</th>
            <th>@Html.DisplayNameFor(model => model.AnimalDtEncontro)</th>
            <th>@Html.DisplayNameFor(model => model.AnimalStatus)</th>
            <th>@Html.DisplayNameFor(model => model.Usuario)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AnimalNome)</td>
                <td>@Html.DisplayFor(modelItem => item.AnimalRaca)</td>
                <td>@Html.DisplayFor(modelItem => item.AnimalTipo)</td>
                <td>@Html.DisplayFor(modelItem => item.AnimalCor)</td>
                <td>@Html.DisplayFor(modelItem => item.AnimalSexo)</td>
                <td>@Html.DisplayFor(modelItem => item.AnimalObservacao)</td>
                <td>@Html.DisplayFor(modelItem => item.AnimalFoto)</td>
                <td>@Html.DisplayFor(modelItem => item.AnimalDtDesaparecimento)</td>
                <td>@Html.DisplayFor(modelItem => item.AnimalDtEncontro)</td>
                <td>@Html.DisplayFor(modelItem => item.AnimalStatus)</td>
                <td>@Html.DisplayFor(modelItem => item.Usuario.Id)</td>
                <td class="action-links">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .page-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 2em;
        color: #007bff;
    }

    .create-link {
        text-align: center;
        margin-bottom: 20px;
    }

    .table-header {
        background-color: #f8f9fa;
    }

    .table {
        width: 90%;
        margin: auto;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            text-align: center;
            padding: 10px;
        }

    .action-links {
        display: flex;
        justify-content: space-around;
    }

        .action-links .btn {
            margin: 0 5px;
        }

    .btn {
        color: #fff;
        padding: 5px 10px;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-info {
        background-color: #17a2b8;
        border: none;
    }

        .btn-info:hover {
            background-color: #117a8b;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn:hover {
        opacity: 0.9;
    }
</style>
