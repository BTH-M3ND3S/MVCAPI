@model IEnumerable<ProjetoApi.Models.Observacoes>

@{
    ViewData["Title"] = "Index";
}

<h1 class="page-title">Lista de Observações</h1>

<p class="create-link">
    <a asp-action="Create" class="btn btn-primary">Criar Nova Observação</a>
</p>
<table class="table table-striped">
    <thead class="table-header">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ObservacaoDescricao)</th>
            <th>@Html.DisplayNameFor(model => model.ObservacaoLocal)</th>
            <th>@Html.DisplayNameFor(model => model.ObservacaoData)</th>
            <th>@Html.DisplayNameFor(model => model.AnimalId)</th>
            <th>@Html.DisplayNameFor(model => model.Usuario)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ObservacaoDescricao)</td>
                <td>@Html.DisplayFor(modelItem => item.ObservacaoLocal)</td>
                <td>@Html.DisplayFor(modelItem => item.ObservacaoData)</td>
                <td>@Html.DisplayFor(modelItem => item.AnimalId)</td>
                <td>@Html.DisplayFor(modelItem => item.Usuario.Id)</td>
                <td class="action-links">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .page-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 2em;
        color: #007bff;
    }

    .create-link {
        margin-left: 570px;
        margin-bottom: 10px;
    }

    .table-header {
        background-color: #f8f9fa;
    }

    .table {
        width: 90%;
        margin: auto;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            text-align: center;
            padding: 10px;
        }

    .action-links {
        display: flex;
        justify-content: space-around;
    }

        .action-links .btn {
            margin: 0 5px;
        }

    .btn {
        color: #fff;
        padding: 5px 10px;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-warning {
        margin-left:570px;
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

        .btn-warning:hover {
            color: white;
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-info {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-info:hover {
            background-color: #5a6268;


    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .btn:hover {
        opacity: 0.8;
    }
</style>
