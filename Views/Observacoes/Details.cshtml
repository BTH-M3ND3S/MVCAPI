@model ProjetoApi.Models.Observacoes

@{
    ViewData["Title"] = "Detalhes da Observação";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<div class="details-container">
    <h4 class="form-title">Observações</h4>
    <hr class="form-divider" />
    <dl class="row detail-list">
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.ObservacaoDescricao)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.ObservacaoDescricao)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.ObservacaoLocal)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.ObservacaoLocal)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.ObservacaoData)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.ObservacaoData)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalId)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalId)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.Usuario.Id)
        </dd>
    </dl>
    <div class="action-links text-center">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
        </div>
</div>


<style>
    .page-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 2em;
        color: #333;
    }

    .details-container {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        width: 60%;
    }

    .form-title {
        text-align: center;
        font-size: 1.5em;
        margin-bottom: 10px;
        color: #555;
    }

    .form-divider {
        margin-bottom: 20px;
    }

    .detail-list dt, .detail-list dd {
        margin-bottom: 10px;
    }

    .detail-label {
        font-weight: bold;
        color: #555;
    }

    .detail-value {
        color: #333;
    }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }

    .btn-primary {
        width: 100%;
        background-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        width: 100%;
        margin-top: 10px;
    }

</style>
